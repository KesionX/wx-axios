{
  "compilerOptions": {
    "module": "ES6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "ES6",
    "outDir": "./dist/",
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./dist/types",
    "noEmitOnError": true,
    "lib": ["es6", "es2015"]
  },

  "include": ["src/**/*.ts"],

  "exclude": ["node_modules"]
}
